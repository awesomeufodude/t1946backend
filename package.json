    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "^10.0.2",
    "@types/nodemailer": "^6.4.15",
    "bcrypt": "^5.1.1",
    "bull": "^4.16.5",
    "cache-manager": "^5.7.6",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.5",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "handlebars": "^4.7.8",
    "ioredis": "^5.6.1",
    "minio": "^8.0.5",
    "moment-timezone": "^0.5.46",
    "multer": "^1.4.5-lts.2",
    "nodemailer": "^6.9.15",
    "openai": "^4.76.3",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.0",
    "rollbar": "^2.26.4",
    "rxjs": "^7.8.1",
    "sharp": "^0.34.1",
    "tmp": "^0.2.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
