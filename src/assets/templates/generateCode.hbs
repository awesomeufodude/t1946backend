<link rel='preconnect' href='https://fonts.googleapis.com' />
<link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
<link
  href='https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap'
  rel='stylesheet'
/>
<style>
  .email-container { width: 800px; height: 428px; background-color: #F6F6F6; border-collapse: collapse; margin: 0 auto;
  } .header { width: 600px; height: 70px; background-color: #BD2520; color: white; text-align: center;
  border-top-left-radius: 5px; border-top-right-radius: 5px; margin: 0 auto; margin-top: 20px; } .header td { font-size:
  18px; padding: 10px; } .body { width: 600px; height: 250px; background-color: white; border-radius: 5px; margin: 0
  auto; text-align: center; color: #000; } .body td { padding: 20px; } .code-container { width: 200px; height: 40px;
  background-color: #A7F3D0; color: #065F46; border-radius: 5px; margin: 20px auto; border-left: 10px solid #065F46;
  border-top-left-radius: 5px; border-bottom-left-radius: 5px; } .code-container table { width: 100%; height: 100%;
  border-collapse: collapse; } .code-container td { font-family: "Nunito", sans-serif; font-size: 22px; font-weight:
  bold; text-align: center; vertical-align: middle; padding: 5px 2px; color: #065F46; } .footer { width: 600px; margin:
  20px auto 10px; text-align: center; } .footer td { font-size: 14px; color: #B3B3B3; font-family: 'Open Sans',
  sans-serif; }
</style>

<table class='email-container'>
  <tr>
    <td>
      <!-- Header -->
      <table class='header'>
        <tr>
          <td>
            <img src='{{baseUrlStaticFiles}}/images/logoWhite.png' alt='logo' style='height: 35px;' />
          </td>
        </tr>
      </table>

      <!-- Body -->
      <table class='body'>
        <tr>
          <td>
            <img
              src='{{baseUrlStaticFiles}}/images/leonProfile.png'
              alt='logo'
              style='width: 150px; margin-bottom: 20px;'
            />
            <p style='font-size: 18px; font-weight: 500; margin: 0; font-family: "Nunito", sans-serif;'>Generación de
              código de acceso</p>
            <p style='font-size: 14px; margin: 0px; font-family: "Open Sans", sans-serif;'>Este es tu código de acceso
              para el
              {{name}}</p>

            <!-- Code Container -->
            <table class='code-container'>
              <tr>
                <td>
                  {{code}}
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>

      <!-- Footer -->
      <table class='footer'>
        <tr>
          <td>
            © 2024 TOUCH 1946. Todos los derechos reservados.
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>